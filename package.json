{
    "name": "twitter-clone",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "backend",
      "frontend"
    ],
    "scripts": {
      "start": "NODE_ENV=production npm run start --prefix backend",
      "dev": "NODE_ENV=development npm run dev --prefix backend",
